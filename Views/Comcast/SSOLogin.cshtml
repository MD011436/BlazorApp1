<script type="text/javascript">
    function login() {
        // alert("Hello!");
        document.getElementById("myspan").innerHTML="Login Clicked";
        document.getElementById("result").innerHTML="Login Clicked result";
        // document.getElementById("myspan").innerText="newtext Login Clicked";
    }
      
  </script>

